<h2>Listing Documents</h2>

<table phx-window-keydown="keydown" phx-throttle="500">
  <thead>
    <tr>
      <th>Title</th>
      <th>author</th>
      <th>posted</th>
    </tr>
  </thead>
  <tbody>
    <%= for item <- @items do %>
      <tr>
        <td><%= live_redirect item.title, to: Routes.document_show_path(@socket, :show, item.id) %></td>
        <td><%= item.author_name %></td>
        <td><%= item.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>